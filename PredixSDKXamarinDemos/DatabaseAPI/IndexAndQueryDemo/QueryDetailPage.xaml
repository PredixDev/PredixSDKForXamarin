<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="IndexAndQueryDemo.QueryDetailPage"
             Title="Word Definition">
    <ContentPage.Content>

        <ScrollView
                x:Name="ScrollView"
                AutomationId="ScrollView">
        
             <StackLayout
                x:Name="MainLayout"
                AutomationId="MainLayout"
                Padding="20">

                <Label 
                    x:Name="WordNameLabel" 
                    AutomationId="WordNameLabel"
                    FontAttributes="Bold"/>
            
                <Label
                    x:Name="WordDefinitionLabel"
                    AutomationId="WordDefinitionLabel"/>

          </StackLayout>
            
      </ScrollView>
        
    </ContentPage.Content>
</ContentPage>
