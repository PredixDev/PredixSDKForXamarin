<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AuthenticationDemo.OnlineAPIPage">
    <ContentPage.Content>
        <StackLayout
            x:Name="OnlineAPILayout"
            Padding="10">

            <Button
                x:Name="OnlineAPIButton"
                Text="Send Online Request"
                AutomationId="OnlineAPIButton"/>

            <Label
                x:Name="URLStatus"
                Text="Status:"
                AutomationId="URLStatus"/>

            <ActivityIndicator 
                x:Name="StatusIndicator" 
                AutomationId="StatusIndicator"/>
            
            <Label
                x:Name="URLStatusLabel"
                WidthRequest="300"
                HeightRequest="400"
                FontSize="Small"
                AutomationId="URLStatusLabel"/>

            <Label
                x:Name="URLResponse"
                Text="Response:"
                AutomationId="URLResponse"/>

            <Label
                x:Name="URLResponseLabel"
                WidthRequest="300"
                HeightRequest="150"
                AutomationId="URLResponseLabel"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
